                                    td
                                        input(type='text', name ='login') 
                                    td
                                       select(name='group')
                                         option
                                         each group in groups
                                            option(value = group.id) #{group.course}/#{group.number}/#{group.subgroup}
                                    td 
                                        button(name='parm',value='add') add                